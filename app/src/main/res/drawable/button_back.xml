<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3EBBBBBB"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <padding android:top="5dp"
                android:bottom="5dp"
                android:right="15dp"
                android:left="15dp"/>
            <solid android:color="#5CB54B"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>